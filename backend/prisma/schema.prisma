generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario     Int       @id @default(autoincrement())
  usuario        String    @db.VarChar(15)
  contrasena     String    @db.VarChar(30)
  correo         String    @db.VarChar(45)
  fechaNac       DateTime
  fotoPerfil     Bytes?    @db.TinyBlob

  @@map("usuario") // Esto mapea el modelo a la tabla 'usuario' en la base de datos MySQL
}
